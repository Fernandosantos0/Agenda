<% if(errors.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <div class="text-danger">
            <% errors.forEach(erro => { %>
                <%- erro %> <br>
            <% }); %>
        </div>
    </div>
<% } %>

<% if(success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <div class="text-success">
            <% success.forEach(success => { %>
                <%- success %> <br>
            <% }); %>
        </div>
    </div>
<% } %>