<%- include('./partials/head') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <header>
                <h1 class="text-center">Criar ou logar no sistema</h1>
                <p class="text-center lead">Abaixo, você pode criar sua conta ou fazer login</p>
            </header>

            <%- include('./partials/message') %>

            <div class="row">
                <div class="col">
                    <header>
                        <h2>Criar conta</h2>
                        <p>Se ainda não tem uma conta, crie uma aqui</p>
                    </header>

                    <!-- formulário -->
                    <form action="/login/register" method="POST" accept-charset="UTF-8">
                        <div class="form-group">
                            <label for="input-email-login" class="font-weight-bold">E-mail:</label>
                            <input type="email" class="form-control" name="email" id="input-email-login" aria-describedby="emailHelp" placeholder="Seu email" title="Digite seu e-mail">
                        </div>
                        <div class="form-group">
                            <label for="input-password-login" class="font-weight-bold">Senha:</label>
                            <input type="password" class="form-control" name="password" id="input-password-login" placeholder="Senha" title="Crie uma senha válida">
                        </div>
                        <div class="form-group">
                            <label for="input-repetir-senha-login" class="font-weight-bold">Repetir Senha:</label>
                            <input type="password" class="form-control" name="repetir" id="input-repetir-senha-login" placeholder="Senha" title="Crie uma senha válida">
                        </div>
                        <button type="submit" class="btn btn-primary">Registrar</button>
                        <button type="reset" class="btn btn-success">Limpar</button>
                    </form>
                </div> <!-- Criar conta -->

                <div class="col">
                    <header>
                        <h2>Logar no sistema</h2>
                        <p>Se já possui uma conta, faça login aqui</p>
                    </header>

                    <!-- formulário -->
                    <form action="/login/logar" method="POST" accept-charset="UTF-8">
                        <div class="form-group">
                            <label for="input-email-logar" class="font-weight-bold">E-mail:</label>
                            <input type="email" class="form-control" name="email" id="input-email-logar" aria-describedby="emailHelp" placeholder="Seu email" title="Digite seu e-mail">
                        </div>
                        <div class="form-group">
                            <label for="input-password-logar" class="font-weight-bold">Senha:</label>
                            <input type="password" class="form-control" name="password" id="input-password-logar" placeholder="Senha" title="Crie uma senha válida">
                        </div>
                        <button type="submit" class="btn btn-primary">Logar</button>
                        <button type="reset" class="btn btn-success">Limpar</button>
                    </form>
                </div> <!-- Logar no sistema -->
            </div>
            
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./partials/footer') %>